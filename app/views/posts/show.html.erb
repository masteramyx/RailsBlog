<p id="notice"><%= notice %></p>

<h2>

  <%= @post.title %>
</h2>

<p>
  <%= @post.body %>
</p>

<h3>Comments</h3>
<%= render @post.comments %>

<h4> New Comment </h4>
<%= form_with(model: [@post, @post.comments.build], local: true) do |form| %>
  <div class='field'>
    <%= form.label :author %><br>
    <%= form.text_field :author %>
  </div>

  <div class='field'>
    <%= form.label :body %><br>
    <%= form.text_area :body %>
  </div>

  <div class='actions'>
    <%= form.submit %>
  </div>
<% end %>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
